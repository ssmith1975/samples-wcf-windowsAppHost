<Window x:Class="ProductsServiceHost.HostController"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Products Service Host" Height="350" Width="350">
    <Grid>
        <Button x:Name="start" Content="Start" HorizontalAlignment="Left" Margin="51,60,0,0" VerticalAlignment="Top" Width="75" Click="start_Click"/>
        <Button x:Name="stop" Content="Stop" HorizontalAlignment="Right" Margin="0,60,56,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="stop_Click"/>
        <Label Content="Service Status:" HorizontalAlignment="Left" Margin="43,0,0,111" VerticalAlignment="Bottom" />
        <TextBox x:Name="status" HorizontalAlignment="Left" Height="23" Margin="133,0,0,111" TextWrapping="Wrap" Text="Service Stopped" VerticalAlignment="Bottom" Width="153"/>

    </Grid>
</Window>
